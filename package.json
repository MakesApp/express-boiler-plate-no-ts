{
  "name": "node-backend",
  "version": "1.0.0",
  "description": "Backend Node.js",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "local": "cross-env NODE_ENV=local nodemon src/index.js",
    "dev": "cross-env NODE_ENV=dev nodemon src/index.js",
    "prod": "cross-env NODE_ENV=prod nodemon src/index.js",
    "test": "jest",
    "test:unit": "jest unit",
    "test:int": "jest int",
    "test:coverage": "jest --coverage",
    "format": "npm run prettier:fix && npm run lint:fix",
    "lint:fix": "npm run lint -- --fix",
    "lint": "eslint \"**/*.js\" --ignore-pattern node_modules/",
    "prettier": "npx prettier *.js --check",
    "prettier:fix": "npm run prettier -- --write"
  },
  "keywords": [
    "Node"
  ],
  "author": "Makes",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.23.4",
    "@babel/core": "^7.23.3",
    "@babel/preset-env": "^7.23.3",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^7.0.2",
    "jest": "^27.1.0",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2"
  },
  "dependencies": {
    "celebrate": "^15.0.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^10.0.0",
    "dotenv-flow": "^3.2.0",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.1",
    "mongodb-memory-server": "^8.15.0",
    "mongoose": "^7.4.3"
  }
}
